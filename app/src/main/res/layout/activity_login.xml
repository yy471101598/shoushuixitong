<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <ImageView
        android:id="@+id/imgview"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="centerInside"
        />


    <LinearLayout
        android:id="@+id/li_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/kuang_gray_white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/login_psw_bg" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/gray_cc"
            ></View>

        <EditText
            android:id="@+id/et_login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:hint="请输入账号"
            android:singleLine="true"
            android:textColor="@color/text_30"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/li_pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/li_phone"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/kuang_gray_white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/login_psw_bg" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/gray_cc"
            ></View>
        <EditText
            android:id="@+id/et_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/text_30"
            android:textSize="15sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="3"
           android:orientation="horizontal"
           android:background="@drawable/kuang_gray_white"
           android:gravity="center_vertical"
           >

           <ImageView
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:layout_marginLeft="15dp"
               android:background="@drawable/login_psw_bg" />
           <View
               android:layout_width="1dp"
               android:layout_height="match_parent"
               android:layout_marginLeft="15dp"
               android:background="@color/gray_cc"
               ></View>
           <EditText
               android:id="@+id/login_et_yuming"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="12dp"
               android:background="@null"
               android:hint="请输入域名编号"
               android:singleLine="true"
               android:textColor="@color/text_30"
               android:textSize="15sp" />
       </LinearLayout>
        <RelativeLayout
            android:id="@+id/login_rl_bang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="30dp"
            android:background="@drawable/kuang_red_red"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="绑定"
                android:textColor="#ffffff"
                android:textSize="15sp" />

        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/login_tv_yuming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_30"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:visibility="gone"
        android:textSize="13sp" />

    <CheckBox
        android:id="@+id/login_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_30"

        android:text="记住密码"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp" />
    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/kuang_red_red" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </RelativeLayout>


</LinearLayout>